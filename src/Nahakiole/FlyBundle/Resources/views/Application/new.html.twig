{% extends 'FlyBundle:Default:index.html.twig' %}

{% block content -%}
    <h1>Application creation</h1>

    <a class="btn btn-default"
       href="{{ path('application') }}">
        Back to the list
    </a>

    {{ form_start(form, { 'style': 'horizontal' }) }}
    {{ form_row(form.name, { 'style': 'horizontal' }) }}
    {{ form_row(form.description, { 'style': 'horizontal' }) }}
    {{ form_row(form.icon, { 'style': 'horizontal' }) }}


    <ul class="packets"
        data-prototype="{{ form_widget(form.packets.vars.prototype)|e }}">
        {% for packet in form.packets %}
            <li>{{ form_widget(packet) }}</li>
        {% endfor %}
    </ul>

    {{ form_row(form.submit, { 'style': 'horizontal', 'attr': {'class': 'top10'}  }) }}
    {{ form_end(form) }}



{% endblock %}
