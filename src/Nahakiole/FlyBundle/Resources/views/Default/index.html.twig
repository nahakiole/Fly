<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible"
          content="IE=edge,chrome=1">
    <title>Fly - Automatic package installation and configuration</title>
    <meta name="description"
          content="">
    <meta name="viewport"
          content="width=device-width, initial-scale=1">

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css"
          rel="stylesheet">

    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/fly/img/favicon.ico') }}">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('bundles/fly/img/favicon.ico') }}">
    <link type="image/x-icon" href="{{ asset('bundles/fly/img/favicon.ico') }}">

    {% stylesheets
    'bundles/fly/css/bootstrap.min.css'
    'bundles/fly/css/main.css'
    filter='cssrewrite'
    output='css/compiled/main.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% block head %}

    {% endblock %}
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>

    <script src="{{ asset('bundles/fly/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js') }}"></script>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top"
     role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button"
                    class="navbar-toggle"
                    data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand"
               href="{{ path('fly_homepage') }}">
                <i class="fa fa-paper-plane"></i> Fly
            </a>
        </div>
        <div class="collapse navbar-collapse"
             id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">

                <!-- This is bad and I should feel bad -->
                {%- if app.request.get('_route') == 'fly_about' -%}
                <li class="active">
            {%- else -%}

                <li>
                    {%- endif -%}
                    <a href="{{ path('fly_about') }}">About</a>
                </li>



                {%- if app.request.get('_route') == 'fly_faq' -%}
                <li class="active">
            {%- else -%}

                <li>
                    {%- endif -%}
                    <a href="{{ path('fly_faq') }}">FAQ</a>
                </li>
                {% if app.user %}
                    <li class="dropdown">
                        <a href="#"
                           class="dropdown-toggle"
                           data-toggle="dropdown"> {{ app.user.prename }} {{ app.user.name }}
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu"
                            role="menu">

                            <li>
                                <a href="{{ path('distribution') }}">Show Distributions</a>
                            </li>
                            <li>
                                <a href="{{ path('application') }}">Show Application</a>
                            </li>
                            <li>
                                <a href="{{ path('application_new') }}">Add Application</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="{{ path('logout') }}">Logout</a>
                            </li>
                        </ul>
                    </li>
                {% else %}

                {% endif %}

            </ul>

        </div>
        <!-- /.navbar-collapse -->

    </div>
</div>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    {% block header %}
    {% endblock %}
</div>

<div class="container container-hero">
    {% block content %}
    {% endblock %}

    <footer class="col-md-12">
        <p>&copy; Robinio.ch {{ date('now').format('Y') }}</p>
    </footer>
</div>
<!-- /container -->

{% javascripts
'@FlyBundle/Resources/public/js/vendor/jquery-1.11.0.min.js'
'@FlyBundle/Resources/public/js/vendor/jquery.easing.min.js'
'@FlyBundle/Resources/public/js/vendor/bootstrap.min.js'
'@FlyBundle/Resources/public/js/vendor/masonry.pkgd.min.js'
'@FlyBundle/Resources/public/js/main.js'
output='js/compiled/main.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

